<Page x:Class="MasterPolApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Label Content="Логин:" FontSize="24"></Label>
            <TextBox x:Name="LoginTextBox" HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"></TextBox>
            <Label Content="Пароль:" FontSize="24"></Label>
            <PasswordBox x:Name="PasswordTextBox" HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"></PasswordBox>
            <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Войти" Margin="10"></Button>
            <Button x:Name="ExitButton" Click="ExitButton_Click" Content="Выйти"></Button>
        </StackPanel>
    </Grid>
</Page>
